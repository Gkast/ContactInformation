{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6"],
    "jsx": "react",
    "moduleResolution": "node",
    "types": ["node"],
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "outDir": "build"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "build",
    "node_modules",
    "**/*.spec.ts"
  ]
}